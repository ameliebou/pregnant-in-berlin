<% unless current_user %>

  <div class="navbar navbar-light navbar-lewagon">
    <%= link_to "/", class: "navbar-brand" do %>
      <i class="fas fa-baby"></i>
    <% end %>
    <div>
      <%= link_to "Sign up", new_user_registration_path, class: "btn-pib" %>
      <%= link_to "Log in", new_user_session_path, class: "btn-pib" %>
    </div>
  </div>

<% else %>

  <div class="navbar navbar-light navbar-lewagon">
    <%= link_to "/", class: "navbar-brand" do %>
      <i class="fas fa-baby"></i>
    <% end %>

    <div class="dropdown">
      <button class="btn btn-pib dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-bars"></i>
      </button>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <%= link_to "Action", "#", class: "dropdown-item" %>
        <%= link_to "Another action", "#", class: "dropdown-item" %>
        <div class="dropdown-divider"></div>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  </div>

<% end %>

