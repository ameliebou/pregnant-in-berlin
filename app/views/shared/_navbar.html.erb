<% unless current_user %>

  <div class="navbar navbar-dark navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="fas fa-baby"></i>
    <% end %>
    <div>
      <%= link_to "Kita Finder", kita_finder_path, class: "btn-pib" %>
      <%= link_to "Log in", new_user_session_path, class: "btn-pib-dark" %>
    </div>
  </div>

<% else %>

  <div class="navbar navbar-dark navbar-lewagon">
    <%= link_to "/", class: "navbar-brand" do %>
      <i class="fas fa-baby"></i>
    <% end %>

    <div class="navbar-links">

      <%= link_to "My dashboard", "/dashboard" %>

      <div class="dropdown">
        <button class="btn btn-pib dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-bars"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to "Kita contacts", kita_contacts_path, class: "dropdown-item" %>
          <%= link_to "Kita finder", kita_finder_path, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>

    </div>
  </div>

<% end %>

