<div class="col-sm-4">

  <%= simple_form_for [@kindergarten, @kita_contact] do |f| %>
    <div class="form-group">
      <%= f.input :contact_type,
      collection: %w(call email visit other),
      input_html: { class: "form-control" } %>
      <%= f.input :note, input_html: { class: "form-control" } %>
    </div>
    <%= f.submit "Add a contact", class: "btn-pib-dark" %>
  <% end %>

</div>
