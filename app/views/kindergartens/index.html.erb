<div class="window d-block d-sm-flex">
  <div class="search-container d-none d-sm-block">
    <div class="search-title">
      <h2>Filter your search for kitas</h2>
    </div>

    <div class="form-container">
      <%= form_tag kindergartens_path, method: :get do %>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control",
          placeholder: "What's your address?"
        %>
        <p>Search radius (in km):</p>
        <%= select_tag :radius,
          "<option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>". html_safe, class:"form-control" %>

        <p>Minimum age (in months):</p>
        <%= select_tag :minimum_age,
          "<option>all</option>
          <option>< 6</option>
          <option>6 - 12</option>
          <option>12 - 18</option>
          <option>> 18</option>". html_safe, class:"form-control" %>

        <p>Kita size (in nb of total kids)</p>
        <%= select_tag :places,
          "<option>all</option>
          <option>< 20</option>
          <option>20 - 50</option>
          <option>50 - 100</option>
          <option>> 100</option>". html_safe, class:"form-control" %>

        <%= submit_tag "Search", class: "btn-pib mt-2" %>
      <% end %>
    </div>
  </div>

  <div class="search-container-small d-block d-sm-none">
    <div class="search-title">
      <h3>Filter your search</h3>
    </div>

    <div class="form-container">
      <%= form_tag kindergartens_path, method: :get do %>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control d-inline",
          placeholder: "What's your address?"
        %>
        <%= select_tag :radius,
          "<option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>". html_safe, class:"form-control d-inline" %>
        <div class="d-inline"> km</div>

        <%= submit_tag "Go", class: "btn-pib d-inline" %>
      <% end %>
    </div>
  </div>

  <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
